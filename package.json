{
  "version": "0.1.0",
  "name": "d11n.net",
  "description": "My website for Bitcoin related content.",
  "repository": "git@github.com:dennisreimann/d11n.net.git",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "clean": "rm -rf site-data.json dist/* ",
    "init": "npm-run-all -p build:data build:copy",
    "start": "npm-run-all clean init -p start:*",
    "start:articles": "onchange -i -k 'articles/**/*' 'includes/**/*' -- npm run build:articles",
    "start:data": "onchange -k 'site-data.json' 'pug.config.js' 'markdown.js' -- npm run build:pages",
    "start:pages": "npm run build:pages -- --watch --pretty",
    "start:styles": "npm run build:styles -- --watch",
    "start:serve": "browser-sync start --config browser-sync.config.js --watch",
    "build": "npm-run-all clean init -p build:* -s optimize",
    "build:articles": "node tasks/generate_articles.js",
    "build:copy": "mkdir -p dist && cp -r static/* dist",
    "build:data": "node tasks/generate_site_data.js",
    "build:pages": "pug pages -O pug.config.js --out dist",
    "build:styles": "postcss styles/index.css --output dist/styles/main.css",
    "optimize": "npm-run-all -p optimize:*",
    "optimize:styles": "csso dist/styles/main.css --output dist/styles/main.css",
    "prod": "npm-run-all build optimize"
  },
  "devDependencies": {
    "autoprefixer": "9.8.6",
    "browser-sync": "2.26.12",
    "csso-cli": "3.0.0",
    "gray-matter": "4.0.2",
    "highlight.js": "10.1.2",
    "jstransformer-markdown-it": "2.1.0",
    "markdown-it": "11.0.0",
    "markdown-it-anchor": "5.3.0",
    "markdown-it-implicit-figures": "0.10.0",
    "markdown-it-mark": "3.0.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.0.2",
    "postcss-calc": "7.0.3",
    "postcss-cli": "7.1.1",
    "postcss-custom-media": "7.0.8",
    "postcss-import": "12.0.1",
    "postcss-media-variables": "2.0.1",
    "postcss-nesting": "7.0.1",
    "pug-cli": "1.0.0-alpha6",
    "sync-request": "6.1.0"
  }
}
